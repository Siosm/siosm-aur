post_install() {
	getent passwd ffsync &>/dev/null || useradd -r -s /usr/bin/false \
		-g http -d /opt/mozilla-firefox-sync-server ffsync >/dev/null

	chown -R ffsync:log /var/log/ffsync
}

post_update() {
	chown -R ffsync:log /var/log/ffsync
}

pre_remove() {
	getent passwd ffsync &>/dev/null && userdel ffsync >/dev/null
	true
}
