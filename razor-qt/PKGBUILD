# Contributor: Sergio Montesinos <sermonpe@yahoo.es>
pkgname=razor-qt
pkgver=0.5.1
pkgrel=1
pkgdesc="Razor is a toolbox-like desktop-environment"
url="http://razor-qt.org"
arch=('i686' 'x86_64')
license="GPL2"
depends=('qt' 'polkit-qt' 'udev' 'libxrender' 'libxcomposite' 'libxdamage' 'zlib' 'file' 'libxcursor' 'libstatgrab')
makedepends=('cmake')
optdepends=('openbox: Razor-qt works with various WM, but most of Razor developers use Openbox.'
            'upower: To Shutdown/Reboot from Razor'
            'udisks: For the Removable Media plugin to work'
            )
source=("https://github.com/downloads/Razor-qt/razor-qt/razorqt-${pkgver}.tar.bz2")
md5sums=('a4c195c289c0843eb6152808ff21bd5a')

build() {
  cd "${srcdir}/razorqt-${pkgver}"
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr -DLIB_SUFFIX=""
  make
}
 
package() {
  cd "${srcdir}/razorqt-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

